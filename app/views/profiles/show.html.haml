.container
  .profilePage_header
    .profile_back_icon
      = link_to image_tag('矢印.png'), :back
    .profilePage_user_actionButton
      =link_to 'Edit', edit_profile_path
    .profile_username
      = current_user.username
    

  .avatar
    - if current_user.profile&.avatar&.attached?
      = image_tag @user.profile.avatar, class: 'profile_usericon'
    - else 
      = image_tag 'default-avatar.png', class: 'profile_usericon'



  .account_status
    .post_status
      %p
    %p.status-text Posts

    .followers_status
      %p
    %p.status-text Followers

    .following_status
      %p
    %p.status-text Following
