.container
  .profilePage_header
    .profile_back_icon
      = link_to image_tag('back.svg'), :back
    .profilePage_user_actionButton
      =link_to 'Edit Profile', edit_profile_path
    .profile_username
      = current_user.username
    

  .avatar
    = image_tag current_user.avatar_image, class:'profile_usericon'

  .account_status
    .post_status
      %p
    %p.status-text Posts

    .followers_status
      %p
    %p.status-text Followers

    .following_status
      %p
    %p.status-text Following
