.container
  .user-date
    = image_tag current_user.avatar_image, class:'article_usericon'
    %p.post_name= current_user.username
  = form_with(model: @article, url:articles_path, method:'post', local: true) do |f|
    %div.post_content
      = f.text_field :content, placeholder: ' What is on your mind ? ', class: 'text'
    %label.post_contents_image
      + Album
      = f.file_field :eyecatch, multiple: true
    %div
      = f.submit '保存', class: 'btn-primary'